! ----| rxvt-unicode settings |---- {{{

! -| configuration |-
!urxvt*geometry:                142x71
urxvt*saveLines:                32767
urxvt*scrollBar:              false
urxvt*scrollBar_right:          false
urxvt*loginShell:              true
urxvt*borderLess:              false
urxvt*termName:                rxvt-unicode
!urxvt*inheritPixmap:          true
urxvt*cutchars:                "()*,<>[]{}|'
urxvt*secondaryScroll:          false
urxvt*visualBell:              false

! -| tabs |-
urxvt.tabbed.tabbar-fg:         8
urxvt.tabbed.tabbar-bg:         0
urxvt.tabbed.tab-fg:            7
urxvt.tabbed.tab-bg:            0

! -| general color-settings |-
urxvt.background:        black
urxvt.foreground:        white
urxvt.tintColor:         black
!urxvt.fading:            55  
urxvt.fadeColor:         black
urxvt.shading:           13
urxvt.inheritPixmap:     true
urxvt.pointerColor:      black
urxvt.pointerColor2:    white

! -| browser / url |-
urxvt.perl-lib:             /home/ryz/.urxvt
urxvt.perl-ext:             selection,mark-yank-urls
urxvt*perl-ext-common:          default,matcher,-option-popup,-selection-popup,-readline
urxvt*urlLauncher:              /home/ryz/scripts/ff_newtab.sh
urxvt*matcher.button:          1
urxvt*matcher.pattern.1:        \\bwww\\.[\\w-]+\\.[\\w./@#-]*[\\w/-]
urxvt.underlineURLs: true
urxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode

! -| font |-
urxvt*font: -schumacher-clean-*-*-*-*-8-80-*-*-*-*-*-irv
#urxvt*font:              -xos4-terminus-medium-*-*-*-12-*-*-*-*-*-iso8859-16
urxvt*boldFont:          -schumacher-clean-*-*-*-*-8-80-*-*-*-*-*-irv
#urxvt*boldFont:          -xos4-terminus-medium-*-*-*-12-*-*-*-*-*-iso8859-16

!urxvt*font:              -nil-profont-medium-r-normal-*-11-110-72-72-c-60-iso8859-1
!urxvt*boldFont:          -nil-profont-medium-r-normal-*-11-110-72-72-c-60-iso8859-1

!urxvt*font:             -misc-fixed-medium-r-normal-*-14-130-75-75-c-*-*-*

urxvt*renderFont:        true
!}}}

